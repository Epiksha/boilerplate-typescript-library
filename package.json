        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@typescript-eslint/parser": "^5.3.1",
        "babel-loader": "^8.2.3",
        "babel-plugin-transform-require-context": "^0.1.1",
        "css-loader": "^6.5.1",
        "css-minimizer-webpack-plugin": "^3.1.3",
        "eslint": "6.0.0",
        "eslint-loader": "^4.0.2",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "lint-staged": "^11.2.6",
        "mini-css-extract-plugin": "^2.4.4",
