{
    "name": "@epiksha/boilerplate-typescript-library",
    "version": "1.0.0",
    "description": "A simple Typescript library boilerplate with Jest and Rollup",
    "main": "dist/index.js",
    "module": "dist/index.min.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "rollup": "rollup -c",
        "postpublish": "git checkout development && git merge master && git push",
        "preversion": "npm test",
        "postversion": "git push && git push --tags && npm publish",
        "setup": "npm ci",
        "watch": "rollup -cw",
        "test": "jest",
        "test:unit": "jest unit",
        "test:integration": "jest integration"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Epiksha/boilerplate-typescript-library.git"
    },
    "keywords": [
        "Boilerplate",
        "Typescript",
        "Rollup",
        "Library",
        "Babel",
        "Jest"
    ],
    "author": "Calvin Tiley",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Epiksha/boilerplate-typescript-library/issues"
    },
    "homepage": "https://github.com/Epiksha/boilerplate-typescript-library#readme",
    "babel": {
        "presets": [
            [
                "@babel/env",
                {
                    "modules": false
                }
            ]
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "types": "dist/index.d.ts",
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/preset-env": "^7.14.5",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@rollup/plugin-eslint": "^8.0.1",
        "@types/jest": "^26.0.23",
        "@types/node": "^15.12.2",
        "@typescript-eslint/eslint-plugin": "^4.27.0",
        "@typescript-eslint/parser": "^4.27.0",
        "eslint": "^7.28.0",
        "husky": "^4.3.0",
        "jest": "^27.0.4",
        "rollup": "^2.51.2",
        "rollup-plugin-typescript2": "^0.30.0",
        "rollup-plugin-uglify": "^6.0.4",
        "ts-jest": "^27.0.3",
        "typescript": "^4.3.2"
    }
}
